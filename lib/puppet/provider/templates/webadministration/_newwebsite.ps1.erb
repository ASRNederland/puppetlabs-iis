$resource = @{
  name            = '<%= "#{resource[:name]}" %>'
  ensure          = '<%= "#{resource[:ensure]}" %>'
  physicalpath    = '<%= "#{resource[:physicalpath]}" %>'
  applicationpool = '<%= "#{resource[:applicationpool]}" %>'
}

$createParams = @{
  Name            = $resource.name
  PhysicalPath    = $resource.physicalpath
  ApplicationPool = $resource.applicationpool
  Force           = $true
  ErrorAction     = 'Stop'
}

